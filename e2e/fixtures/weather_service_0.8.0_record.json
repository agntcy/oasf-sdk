{
	"name": "weather-service",
	"schema_version": "0.8.0",
	"version": "v0.0.1",
	"description": "Simple ollama-based Langgraph agent with MCP tool calling for weather information",
	"authors": [
		"Paolo Dettori"
	],
	"created_at": "2025-01-15T10:00:00Z",
	"skills": [
		{
			"name": "natural_language_processing/natural_language_understanding",
			"id": 101
		},
		{
			"name": "natural_language_processing/information_retrieval_synthesis",
			"id": 103
		},
		{
			"name": "tool_interaction/tool_use_planning",
			"id": 1403
