					]
				},
				"protocol_version": "1.0",
				"transports": [
					"http"
				],
				"input_modes": [
					"text/plain",
					"application/json"
				],
				"output_modes": [
					"text/html",
					"application/json"
				],
				"capabilities": [
					"streaming"
				],
				"security_schemes": [
					"none"
				]
			}
		},
		{
			"name": "integration/mcp",
			"annotations": {
				"kagenti.io/tool-image": "ghcr.io/arpad-csepi/kagenti/weather-tool:v0.0.5",
				"kagenti.io/tool-port": "8001"
			},
			"data": {
				"servers": [
					{
						"name": "weather-tool",
						"type": "http",
						"capabilities": [],
						"url": "http://localhost:8001"
					}
				]
			}
		}
	]
