		{
			"name": "environmental_science/environmental_monitoring",
			"id": 1704
		}
	],
	"annotations": {
		"kagenti.io/env-var.MCP_URL": "http://weather-service:8001/mcp"
	},
	"locators": [
		{
			"type": "docker_image",
			"url": "ghcr.io/arpad-csepi/kagenti/weather-service:v0.0.5",
			"annotations": {
				"kagenti.io/port": "8000"
			}
		}
	],
	"modules": [
